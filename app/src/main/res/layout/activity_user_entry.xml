<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UserEntryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_item"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_gradiant_line" />
<LinearLayout
    android:id="@+id/user_email_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_50sdp">
    <TextView
        android:id="@+id/email_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/email"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/email_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@null"
            android:hint="@string/email"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:maxLength="150"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"/>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/user_password_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/password_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title_text_font"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_13sdp"
            android:text="@string/password"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_line"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <EditText
                android:id="@+id/password_edt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@null"
                android:hint="@string/password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/heading_bg"
                android:textColorHint="@color/hint_txt_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_12sdp"
                android:imeOptions="actionNext"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <Button
            android:id="@+id/save_btn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/heading_bg"
            android:text="@string/submit"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_15sdp"
            style="@style/text_font"/>
        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/bg_gradiant_line" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>

</layout>