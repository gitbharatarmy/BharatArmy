<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_blue_line">

            <ImageView
                android:id="@+id/first_countryflag_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/in_flag"
                android:layout_margin="@dimen/_1sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/rectangle_blue_line">

            <ImageView
                android:id="@+id/second_countryflag_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/south_flag"
                android:layout_margin="@dimen/_1sdp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|left"
        android:text="1 ODI, 2 Test, 3 T20"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/tour_Name_txt"
        style="@style/title_text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|left"
        android:paddingTop="@dimen/_5sdp"
        android:text="South Africa tour of India, October 2019"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"/>

    <TextView
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|left"
        android:text="Schedule"
        android:textAllCaps="true"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"/>


    <ExpandableListView
        android:id="@+id/lvExpmatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:childDivider="@android:color/transparent"
        android:divider="@android:color/white"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"
        android:scrollbars="none" />
</LinearLayout>