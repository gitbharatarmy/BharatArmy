<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toolbar_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/heading_bg"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="@string/select_country"
            style="@style/title_text_font"
            android:gravity="center_vertical"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/splash_bg_color" />


    </LinearLayout>

    <EditText
        android:id="@+id/search_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/toolbar_linear"
        android:hint="@string/search_hint"
        android:imeOptions="flagNoExtractUi"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="8dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/line_shape"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="@android:color/primary_text_light_nodisable"
        />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/country_dialog_rv"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@+id/search_edt"-->
    <!--android:dividerHeight="2dp"-->
    <!--/>-->

    <ListView
        android:id="@+id/country_dialog_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_edt"
        android:dividerHeight="2dp"/>

    <TextView
        android:id="@+id/no_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_edt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/no_result_found"
        android:textColor="@android:color/primary_text_light"
        android:visibility="gone"
        />

</RelativeLayout>
