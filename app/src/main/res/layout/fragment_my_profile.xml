<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_30sdp">
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="vertical"-->
        <!--android:fillViewport="true"-->
        <!--tools:context=".Fragment.MyProfileFragment">-->

        <LinearLayout
            android:id="@+id/main_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:background="@drawable/profile"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_116sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_22sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/proflie" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    style="@style/text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/edit"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>


            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginBottom="@dimen/_10sdp"-->
                <!--android:orientation="vertical">-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/user_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/full_name"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/user_show_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="Rakesh Patel"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/email_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/email"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/email_show_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="rakesh.patel@bharatarmy.com"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/phone_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/phoneno"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/phone_show_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="6352750317"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/gender_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/gender"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/gender_show_txt"
                        style="@style/text_font"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="Male"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/view_line"
                    android:layout_marginBottom="@dimen/_20sdp"/>
            <!--</LinearLayout>-->
        </LinearLayout>


    <!--</ScrollView>-->
</LinearLayout>
</layout>