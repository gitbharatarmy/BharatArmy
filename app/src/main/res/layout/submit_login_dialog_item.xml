<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/match_detail_curveshape"
            android:orientation="vertical"
            android:weightSum="1">
            <!--android:layout_weight="0.5"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@color/transparent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.bharatarmy.RoundishImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/login_banner"
                        app:cornerRadius="20dp"
                        app:roundedCorners="topRight" />

                    <TextView
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:background="@drawable/dropshadow"
                        android:gravity="bottom"
                        android:text="Register"
                        android:textAllCaps="true"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_18sdp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/bg_gradiant_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_shape"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_user" />

                        <EditText
                            android:id="@+id/fulluser_name_edt"
                            style="@style/text_font"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/fullname"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/heading_bg"
                            android:textColorHint="@color/hint_txt_color"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_shape"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_email" />

                        <EditText
                            android:id="@+id/email_edt"
                            style="@style/text_font"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/emailid"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/heading_bg"
                            android:textColorHint="@color/hint_txt_color"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_shape"
                        android:orientation="horizontal">


                        <com.bharatarmy.CountryCodePicker
                            android:id="@+id/ccp"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:ccp_countryPreference="IN,GB,AU,CA,US,SG"
                            app:ccp_textColor="@color/normal_font_color"
                            app:ccp_textFont="thesansplain.ttf" />

                        <EditText
                            android:id="@+id/mobile_edt"
                            style="@style/text_font"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/mobileno"
                            android:inputType="number"
                            android:maxLength="12"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/heading_bg"
                            android:textColorHint="@color/hint_txt_color"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Terms and Conditions"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/terms_chk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:button="@drawable/chk_indicator" />

                            <TextView
                                android:id="@+id/term_txt"
                                style="@style/text_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/terms_txt"
                                android:textColor="@color/heading_bg"
                                android:textSize="@dimen/_11sdp" />


                            <TextView
                                android:id="@+id/term_condition_txt"
                                style="@style/text_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/terms_condition_txt"
                                android:textColor="@color/heading_bg"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/term2_txt"
                                style="@style/text_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="of The Bharat Army"
                                android:textColor="@color/heading_bg"
                                android:textSize="@dimen/_11sdp" />
                            <!--</LinearLayout>-->
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/signup_btn"
                        style="@style/text_font"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/heading_bg"
                        android:text="Register"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/bg_gradiant_line" />


                    <LinearLayout
                        android:id="@+id/close_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/close_str"
                            android:textAllCaps="false"
                            android:textColor="@color/skip_color"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/hotel_shape">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_18sdp"
                android:src="@drawable/ic_user"
                android:tint="@color/splash_bg_color" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>