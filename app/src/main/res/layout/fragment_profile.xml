<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/main_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginTop="@dimen/_100sdp">

                        <RelativeLayout
                            android:id="@+id/profile_pic_linear"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/profile"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="@dimen/_96sdp"
                                android:layout_height="@dimen/_95sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_17sdp"

                                android:src="@drawable/proflie" />

                            <RelativeLayout
                                android:id="@+id/edit_profile_linear"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/_14sdp"
                                android:layout_marginBottom="@dimen/_14sdp">

                                <LinearLayout

                                    android:layout_width="@dimen/_27sdp"
                                    android:layout_height="@dimen/_27sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"

                                    android:background="@drawable/circle_ring">

                                    <LinearLayout
                                        android:layout_width="@dimen/_23sdp"
                                        android:layout_height="@dimen/_23sdp"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@drawable/circle_bg">

                                        <ImageView
                                            android:id="@+id/edt_profile_image"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_pencil_edit_button"
                                            android:tint="@color/splash_bg_color" />
                                    </LinearLayout>
                                </LinearLayout>

                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/user_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/full_name"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/user_show_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="User Name"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/email_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/email"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/email_show_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="email@email.com"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/phone_txt"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/phoneno"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/country_flagImg"
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/phone_show_txt"
                            android:src="@drawable/in_flag"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/phone_show_txt"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="-"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/gender_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/gender"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/gender_show_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="Male"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/address_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/address"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/address_show_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="-"
                            android:textColor="@color/normal_font_color"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:alpha=".5"
                        android:background="@drawable/view_line" />
                    <!--</LinearLayout>-->
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>