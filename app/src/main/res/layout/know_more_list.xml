<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/splash_bg_color">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/heading_bg">

        <TextView
            android:id="@+id/title_txt_dialog"
            style="@style/title_text_font"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="false"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_vertical|center"
            android:text="@string/about_us"
            android:textAllCaps="true"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/close_txt"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_vertical|center"
            android:text="X"
            android:textAllCaps="true"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_18sdp"
            style="@style/text_font"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/aboutus_banner_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/top_layout"
        android:scaleType="centerCrop"
        android:src="@drawable/ajif" />

    <TextView
        android:id="@+id/aboutuse_sub_title_txt"
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutus_banner_img"
        android:padding="@dimen/_10sdp"
        android:text="@string/internet_connection_error"
        android:textColor="@color/normal_font_color"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout>
