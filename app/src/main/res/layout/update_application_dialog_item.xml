<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/updateapp_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/logo_new"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_140sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Update"
            style="@style/title_text_font"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We added lots of new features and fix some bugs to make your experience as smooth as possible"
            style="@style/text_font"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_btn"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Update App"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/skip_color"
            android:textColor="@color/splash_bg_color"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            style="@style/title_text_font"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notnow_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Now"
            style="@style/text_font"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp" />
    </LinearLayout>
</LinearLayout>