<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
        android:id="@+id/viewpage_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/main1"
        android:visibility="visible" />
        <!--<com.fmsirvent.ParallaxEverywhere.PEWImageView-->
            <!--android:id="@+id/viewpage_bg"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_230sdp"-->
            <!--android:layout_gravity="center"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/main1" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"
            android:background="@drawable/dropshadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_txt"
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:text="Hot deals"
                android:textAllCaps="true"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_140sdp"
            android:background="@color/splash_bg_color"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="3dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                    android:id="@+id/item_heading_txt"
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Get ready for the twenty20 in 2020"
                    android:textAllCaps="true"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_14sdp" />


                    <TextView
                    android:id="@+id/item_desc_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="As the Bharat Army partners with the ICC for the T20 Cricket World Cup in Australia!"
                    android:textAllCaps="false"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_11sdp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/book_txt"
            style="@style/text_font"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/container"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/bookbtn_shape"
            android:gravity="center_horizontal|center_vertical"
            android:text="Book Now"
            android:textAllCaps="true"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>
</layout>