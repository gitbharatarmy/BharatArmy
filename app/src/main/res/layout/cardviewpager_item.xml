<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="6dp">

            <LinearLayout
                android:id="@+id/template2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.bharatarmy.RoundishImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:cornerRadius="10dp"
                    app:roundedCorners="topRight|bottomLeft|topLeft|bottomRight" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/template1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/top_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tag_txt"
                        style="@style/title_text_font"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/tag_shape"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="T20"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/item_heading_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tag_txt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Get ready for the twenty20 in 2020"
                        android:textAllCaps="true"
                        android:textColor="@color/heading_bg"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/item_desc_txt"
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_heading_txt"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="As the Bharat Army partners with the ICC for the T20 Cricket World Cup in Australia!"
                        android:textAllCaps="false"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/home_bookbtn_shape"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/book_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:text="Book"
                        android:textAllCaps="true"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/travel_chhkr" />

            </RelativeLayout>

            <View
                android:id="@+id/bottom_gradiant_view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/_149sdp"
                android:background="@drawable/bg_gradiant_line" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>


