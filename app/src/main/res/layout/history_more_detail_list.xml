<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ajif" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/banner_img"
            android:layout_alignTop="@+id/banner_img"
            android:layout_alignRight="@+id/banner_img"
            android:layout_alignBottom="@+id/banner_img"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/date_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="05"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_30sdp"
                android:textStyle="normal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/day_txt"
                    style="@style/text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Wednesday"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:layout_marginRight="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/header_txt"
                    style="@style/text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="June 2019"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="normal"
                    android:layout_marginRight="@dimen/_5sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/place_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_100sdp"
                android:text="Southampton"
                android:textAllCaps="true"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>