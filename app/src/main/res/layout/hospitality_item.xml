<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp"
    android:orientation="horizontal">

    <!--<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="@dimen/_5sdp"-->
    <!--android:background="@color/splash_bg_color"-->
    <!--card_view:cardCornerRadius="1dp"-->
    <!--card_view:cardElevation="6dp"-->
    <!--card_view:cardMaxElevation="6dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/hospitality_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:scaleType="centerCrop"
            android:src="@drawable/hospital" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hopitality_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="HGI"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hopitality_stdium_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:text="Old Trafford Manchester"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/view_more_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/view_more"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hopitality_price_txt"
                    style="@style/title_text_font"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:text="Â£ 1895"
                    android:textColor="@color/linear"
                    android:textSize="@dimen/_18sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/cart_minus_linear"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cart_minus_btn"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/ic_cart_minus_button" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/quantity_txt"
                        style="@style/text_font"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:id="@+id/cart_plus_linear"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cart_plus_btn"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/ic_cart_plus_button" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_to_cart_btn"
                style="@style/text_font"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/skip_color"
                android:text="@string/add_cart"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hopitality_inclusion_txt"
                    style="@style/text_font"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="top"
                    android:maxLines="1"
                    android:text="Inclusions"
                    android:textAllCaps="true"
                    android:textColor="@color/hint_txt_color"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/inclusion_icon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/meal" />

                    <TextView
                        android:id="@+id/inclusion_txt"
                        style="@style/text_font"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Meal"
                        android:textColor="@color/hint_txt_color"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<!--</android.support.v7.widget.CardView>-->
    </LinearLayout>