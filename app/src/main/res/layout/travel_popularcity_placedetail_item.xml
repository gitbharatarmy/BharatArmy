<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:elevation="6dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/splash_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/travel_popular_package_banner_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/recommended_Linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/recommended_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bal"
                    />

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_package_tour_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="World Cup 2019: Bring o.. \n World Cup 2019: Bring o.."
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/show_package_tour_description_txt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingRight="@dimen/_5sdp"
                android:text="World Cup 2019: Bring o.. \n World Cup 2019: Bring o.. \nWorld Cup 2019: Bring o.."
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_9sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/line_shape"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/toolbar_bottom_left_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradiant_line" />
</androidx.cardview.widget.CardView>
