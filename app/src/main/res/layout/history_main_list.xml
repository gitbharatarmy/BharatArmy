<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/splash_bg_color"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:layout_marginRight="@dimen/_30sdp">

            <TextView
                android:id="@+id/invoice_name_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="@dimen/_5sdp"
                android:text="Invoice 1"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/invoice_date_txt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_5sdp"
                android:text="08 April 2019"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/history_detail_img"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_right_arrow_angle"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/_5sdp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>