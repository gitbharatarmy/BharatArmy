                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/leftside_thankyou_shape" />
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

