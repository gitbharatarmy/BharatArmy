<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MobileVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/heading_bg"
        android:orientation="vertical"
        android:alpha="0.8">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_left_arrow" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/ic_phone_connection_with_a_boy"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_shape"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <com.rilixtech.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/text_font"
            app:ccp_countryPreference="IN,GB,AU,CA,US,SG"
            app:ccp_textColor="@color/normal_font_color"
            app:ccp_textFont="thesansplain.ttf"
            app:ccp_showFullName="true"
            app:ccp_textSize="@dimen/_12sdp"
            app:ccp_arrowSize="@dimen/_12sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_shape"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
    <EditText
        android:id="@+id/phone_no_edt"
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@android:color/transparent"
        android:hint="@string/phoneno"
        android:maxLines="1"
        android:inputType="phone"
        android:maxLength="12"
        android:textColor="@color/heading_bg"
        android:textColorHint="@color/hint_txt_color"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionNext"/>
    </LinearLayout>

    <TextView
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="@string/verification_str"
        android:textColor="@color/normal_font_color"
        android:textSize="@dimen/_13sdp" />

    <Button
        android:id="@+id/mobile_verify_btn"
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/heading_bg"
        android:text="@string/send"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>
</layout>