<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="horizontal">
    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="match_parent"
        app:markerSize="20dp"
        app:lineWidth="2dp"
        app:startLineColor="@color/heading_bg"
        app:endLineColor="@color/heading_bg"
        app:lineStyle="normal"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="@dimen/_35sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_97sdp"
            android:background="@color/colorGrey400"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/marker_img"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_marker"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_230sdp"
            android:background="@color/colorGrey400"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash_bg_color"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="6dp">

        <TextView
            android:id="@+id/hotel_booking_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            style="@style/title_text_font"
            android:textColor="@color/skip_color"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:text="@string/hotel_booking"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vehical_img"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/hotel"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotel_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    style="@style/title_text_font"
                    android:textColor="@color/heading_bg"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:text="The Royal Horseguards"/>
                <TextView
                    android:id="@+id/place_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    style="@style/text_font"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:textColor="@color/normal_font_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:text="Hotel"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hotel_detail_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/stay_lenght"/>

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hotel_stay_detail_time_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        style="@style/title_text_font"
                        android:textColor="@color/heading_bg"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAllCaps="true"
                        android:text="(2 Nights/3 Days)"/>
                    <TextView
                        android:id="@+id/stay_day_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        style="@style/text_font"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_2sdp"
                        android:textColor="@color/normal_font_color"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="Stay Length"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/flight_arr_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/location"/>

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loc_place_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        style="@style/title_text_font"
                        android:textColor="@color/heading_bg"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAllCaps="true"
                        android:text="2 whitehall ct, london"/>
                    <TextView
                        android:id="@+id/location_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        style="@style/text_font"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_2sdp"
                        android:textColor="@color/normal_font_color"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="Location"/>
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            style="@style/title_text_font"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_95sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:text="Inclusion"/>
        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/hotel_facilities_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/_110sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:shimmer_demo_angle="10"
            app:shimmer_demo_layout="@layout/data_placeholder_layout"
            app:shimmer_demo_layout_manager_type="linear_horizontal"
            app:shimmer_demo_shimmer_color="#21ffffff"/>
    </android.support.v7.widget.CardView>
</LinearLayout>