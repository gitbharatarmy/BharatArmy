<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp">
<!--    android:background="@color/splash_bg_color"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_interest_flagRcv"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            android:visibility="gone"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone">
    <TextView
        android:id="@+id/matchODIcount1_txt"
        style="@style/text_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|left"
        android:text="1 ODI"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/matchTESTcount2_txt"
        style="@style/text_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center_vertical|left"
        android:text="2 Test"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/matchT20count_txt"
        style="@style/text_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center_vertical|left"
        android:text="45 T20"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/match_type_linear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/type_txt"
            style="@style/title_text_font"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@drawable/tag_shape"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp"
            android:text="T20"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tour_Name_txt"
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center_vertical|left"
                    android:text="T20 World Cup 2020"
                    android:textAllCaps="true"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tour_desc_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical|left"
                android:text="As the Bharat Army partners with the ICC for the T20 Cricket World Cup in Australia!"
                android:textColor="@color/gray"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/title_txtView"
        style="@style/text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|left"
        android:text="Schedule"
        android:textAllCaps="true"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:visibility="gone"/>
</LinearLayout>
</layout>