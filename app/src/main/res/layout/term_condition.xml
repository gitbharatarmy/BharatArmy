<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@color/splash_bg_color">
<!--com.bharatarmy.Utility.megh-->
               <LinearLayout
                   android:id="@+id/toolbar_linear"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40sdp"
                   android:orientation="horizontal"
                   android:weightSum="1"
                   android:background="@color/heading_bg">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.7"
                       android:text="Terms and Condition"
                       android:textColor="@color/splash_bg_color"
                       android:gravity="center_vertical"
                       android:paddingLeft="@dimen/_10sdp"
                       android:textSize="@dimen/_14sdp"
                       style="@style/text_font"/>

                   <TextView
                       android:id="@+id/close_btn1"
                       android:layout_width="0dp"
                       android:layout_weight="0.3"
                       android:layout_height="@dimen/_25sdp"
                       android:gravity="right"
                       android:paddingRight="@dimen/_10sdp"
                       android:background="@color/heading_bg"
                       android:textColor="@color/splash_bg_color"
                       android:text="x"
                       android:textSize="@dimen/_16sdp"
                       android:textStyle="bold"/>

               </LinearLayout>
            <com.bharatarmy.Utility.meghWebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp"
                android:layout_below="@+id/toolbar_linear"
                tools:ignore="WebViewLayout" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="visible"/>


            <Button
                android:id="@+id/agree_btn"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/webView"
                android:layout_centerHorizontal="true"
                android:background="@color/heading_bg"
                android:text="Agree"
                android:textColor="@color/splash_bg_color"
                android:layout_margin="@dimen/_10sdp"
                style="@style/text_font"
                android:textSize="@dimen/_14sdp"
                android:clickable="false"
                android:alpha="0.5"
                android:enabled="false"/>
            </RelativeLayout>
        </RelativeLayout>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
       android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/close_cancel"
        android:elevation="@dimen/_15sdp"
        android:onClick="closeBtn"
        android:text="X"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"/>

    </RelativeLayout>

