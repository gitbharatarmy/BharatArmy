<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ba_polllist_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash_bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ba_poll_list_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="hello \n hello"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_13sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ba_poll_list_txt">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/duration_img"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/unselected_view"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/poll_durationtxt"
                        style="@style/text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/duration_img"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:text="1 Day ago"
                        android:textAllCaps="true"
                        android:textColor="@color/unselected_view"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/view_img"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toRightOf="@+id/poll_durationtxt"
                        android:src="@drawable/ic_eye"
                        android:tint="@color/gray"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ba_poll_votes_txt"
                        style="@style/text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toRightOf="@+id/view_img"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/unselected_view"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/goto_poll_btn"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_right_arrow_angle" />
            </RelativeLayout>
        </LinearLayout>


        <View
            android:id="@+id/bottom_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/colorGrey300"
            android:visibility="visible" />
    </LinearLayout>
</layout>