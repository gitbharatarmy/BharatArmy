<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/feedback_que_ans_shape"
        android:elevation="2dp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardMaxElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/question1"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/ans_txt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/question1_ans1"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/ans_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/australia_tour"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</layout>
