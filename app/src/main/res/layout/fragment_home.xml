<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:flipTimer="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-90dp"
            android:src="@drawable/travel_chhkr" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
        <LinearLayout
            android:id="@+id/home_top_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_containerhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_50sdp">

                <include layout="@layout/data_placeholder_layout" />


            </com.facebook.shimmer.ShimmerFrameLayout>
            <RelativeLayout
                android:id="@+id/homebanner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginTop="@dimen/_50sdp"
                android:visibility="gone">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_page_dealsRcv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/cardViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_110sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:clipChildren="false"
                    android:overScrollMode="never"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/heading_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dashboard_banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ajif" />
            </LinearLayout>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_220sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/splash_bg_color"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="10dp">

                <TextView
                    android:id="@+id/countdown_txt"
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical|center"
                    android:text="#CWCOUNTDOWN"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <com.bharatarmy.CountDownClockHome
                        android:id="@+id/timerProgramCountdown"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        flipTimer:almostFinishedCallbackTimeInSeconds="5"
                        flipTimer:animationDuration="850"
                        flipTimer:countdownTickInterval="1000"
                        flipTimer:digitBottomDrawable="@drawable/background_bottom"
                        flipTimer:digitDividerColor="@color/heading_bg"
                        flipTimer:digitPadding="2dp"
                        flipTimer:digitTextColor="@color/splash_bg_color"
                        flipTimer:digitTextSize="24sp"
                        flipTimer:digitTopDrawable="@drawable/background_top"
                        flipTimer:digitWidth="28dp"
                        flipTimer:halfDigitHeight="23dp"
                        flipTimer:resetSymbol="8"
                        flipTimer:splitterPadding="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_220sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/splash_bg_color"
                android:visibility="gone"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="10dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <include layout="@layout/data_placeholder_layout" />


                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="@string/about_us"
                        android:textAllCaps="true"
                        android:textColor="@color/heading_bg"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/sub_title_txt"
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/internet_connection_error"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/know_more"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/know_more"
                        android:textColor="@color/skip_color" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_line"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_18sdp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                        android:id="@+id/upcoming_txt"
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="center_vertical|left"
                            android:textAllCaps="true"
                            android:text="@string/upcoming"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_15sdp"  />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/army_popularcity_subtitle_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical|left"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_75sdp"
                        android:background="@drawable/line_shape"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/sign_up" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_star" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/line_shape"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/upcoming_rcyList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_17sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:shimmer_demo_angle="10"
                app:shimmer_demo_layout="@layout/upcoming_storie_data_holder"
                app:shimmer_demo_layout_manager_type="linear_horizontal"
                app:shimmer_demo_shimmer_color="#21ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/heading_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/splash_bg_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageSwitcher
                        android:id="@+id/adv_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_txt"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/sponser"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/heading_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splash_bg_color"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/line_shape" />

                <TextView
                    android:id="@+id/fixture_txt"
                    style="@style/title_text_font"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="@string/fixture"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:alpha=".5"
                    android:background="@drawable/line_shape" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@color/splash_bg_color"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fixture_rcyList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/fixture_btn"
                    style="@style/title_text_font"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@color/skip_color"
                    android:text="@string/all_fixture"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/heading_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splash_bg_color"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/star_line_view" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@color/splash_bg_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp">
                    <LinearLayout
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/vertical_line"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_18sdp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/army_story_txt"
                                style="@style/title_text_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:gravity="center_vertical|left"
                                android:textAllCaps="true"
                                android:text="@string/bharat_army_story"
                                android:textColor="@color/heading_bg"
                                android:textSize="@dimen/_15sdp"   />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/army_story_desc_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical|left"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
                <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/army_story_rcyList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_17sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:shimmer_demo_angle="10"
                    app:shimmer_demo_layout="@layout/storie_data_holder"
                    app:shimmer_demo_layout_manager_type="linear_horizontal"
                    app:shimmer_demo_shimmer_color="#21ffffff" />
                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/army_story_rcyList"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                <!--android:layout_marginRight="@dimen/_10sdp"-->
                <!--android:layout_marginBottom="@dimen/_10sdp"/>-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</layout>