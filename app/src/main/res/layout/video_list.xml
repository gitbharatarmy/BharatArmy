<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/video_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ajif" />

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/video_img"
            android:background="@drawable/bg_gradiant_line"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/topView"
            android:background="@color/heading_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="@dimen/_10sdp"
                android:text="TextView"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_11sdp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_85sdp"
            android:background="@drawable/pacakageprice_curve_shape"
            android:orientation="horizontal"
            android:visibility="visible">


            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:src="@drawable/ic_play_button" />

            <TextView
                android:id="@+id/video_size_txt"
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:text="00:58"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />


        </LinearLayout>
        <ImageView
            android:id="@+id/recommended_image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"
          android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_55sdp"
            android:scaleType="centerInside"
            android:src="@drawable/bal"
            android:layout_marginRight="@dimen/_7sdp"
            android:visibility="gone"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>

