<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"

            android:elevation="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/template2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:background="@drawable/match_detail_curveshape"

                android:orientation="vertical"
                android:visibility="gone">

                <com.bharatarmy.RoundishImageView
                    android:id="@+id/customer_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/australia_tour"
                    android:visibility="visible"
                    app:cornerRadius="@dimen/round_corner_radius"
                    app:roundedCorners="topRight|bottomLeft" />

                <ImageView
                    android:id="@+id/start_pause_media_button"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_icon"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/curve_dropshadow"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile1_image"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/proflie"
                            app:civ_border_color="#2a3550"
                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/username1_txt"
                                style="@style/title_text_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingTop="@dimen/_3sdp"
                                android:text="User Name"
                                android:textColor="@color/splash_bg_color"
                                android:textSize="@dimen/_10sdp" />

                            <com.whinc.widget.ratingbar.RatingBar
                                android:id="@+id/ratingBar1"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_11sdp"
                                app:rb_click_rating="false"
                                app:rb_count="3"
                                app:rb_empty="@drawable/empty"
                                app:rb_fill="@drawable/fill"
                                app:rb_max_count="5"
                                app:rb_space="-2dp"
                                app:rb_touch_rating="false"  />
                            <TextView
                                android:id="@+id/user1_designation_txt"
                                style="@style/text_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text="06 Feb 19"
                                android:textColor="@color/splash_bg_color"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/template1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_left_quotes_sign"
                    android:tint="@color/heading_bg" />

                <TextView
                    android:id="@+id/customer_desc_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="hello \n hello \n hello \n hello \n hello \n hello \n hello \n hello"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_below="@+id/customer_desc_txt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_right_quotes"
                    android:tint="@color/heading_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/proflie"
                        app:civ_border_color="#2a3550"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/username_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:text="User Name"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_10sdp" />
                        <com.whinc.widget.ratingbar.RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_11sdp"
                            app:rb_click_rating="false"
                            app:rb_count="3"
                            app:rb_empty="@drawable/empty"
                            app:rb_fill="@drawable/fill"
                            app:rb_max_count="5"
                            app:rb_space="-2dp"
                            app:rb_touch_rating="false" />
                        <TextView
                            android:id="@+id/user_designation_txt"
                            style="@style/text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_2sdp"
                            android:text="06 Feb 19"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
</layout>

