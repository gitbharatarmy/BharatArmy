<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/story_card"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_305sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:background="@drawable/match_detail_curveshape"
        android:elevation="3dp"
        android:orientation="vertical"
        app:cardMaxElevation="6dp">

        <RelativeLayout
            android:id="@+id/banner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.bharatarmy.RoundishImageView
                android:id="@+id/banner_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/australia_tour"
                app:cornerRadius="@dimen/round_corner_radius"
                app:roundedCorners="topRight" />

            <LinearLayout
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/white_circle"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/header_img"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_ftp_new"
                    android:tint="@color/heading_bg"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/type_txt"
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/tag_shape"
                    android:gravity="center_vertical|center"
                    android:padding="@dimen/_5sdp"
                    android:text="Email"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/army_story_header_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/bharat_army_story"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/date_img"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/calendar"
                        android:tint="@color/skip_color" />

                    <TextView
                        android:id="@+id/date_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text="27, Jul 19"
                        android:textColor="@color/skip_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/views_img"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_eye"
                        android:tint="@color/skip_color" />

                    <TextView
                        android:id="@+id/views_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text="10000"
                        android:textColor="@color/skip_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comment_img"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_comment"
                        android:tint="@color/skip_color"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/comment_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text="1000"
                        android:textColor="@color/skip_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_share"
                        android:tint="@color/skip_color"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/share_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text="Share"
                        android:textColor="@color/skip_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/army_story_sub_txt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/bharat_army_story"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:id="@+id/author_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/proflie"
                    app:civ_border_color="#2a3550"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/username_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="06 Feb 19"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>