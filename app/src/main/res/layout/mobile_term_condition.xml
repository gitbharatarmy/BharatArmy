<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_40sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/match_detail_curveshape"
            android:orientation="vertical">
            <!--com.bharatarmy.Utility.megh-->
            <LinearLayout
                android:id="@+id/toolbar_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:background="@drawable/terms_dialog_topview"
                android:weightSum="1">

                <TextView
                    style="@style/text_font"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Privacy Policy"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/close_btn1"
                    style="@style/title_text_font"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="x"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:id="@+id/top_gradiant_view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
             android:layout_below="@+id/toolbar_linear"
                android:background="@drawable/bg_gradiant_line" />
            <com.bharatarmy.Utility.meghWebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_gradiant_view"
                tools:ignore="WebViewLayout"
               android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="visible" />


            <Button
                android:id="@+id/agree_btn"
                style="@style/text_font"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/webView"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/heading_bg"
                android:clickable="false"
                android:text="Agree"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_14sdp"
                android:alpha="0.5"
                android:enabled="false"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/close_cancel"
        android:elevation="@dimen/_15sdp"
        android:onClick="closeBtn"
        android:text="X"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"/>

</LinearLayout>

