<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context=".Activity.MobileVerificationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:tint="@color/heading_bg"
                android:src="@drawable/ic_left_arrow" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:orientation="vertical"
                android:alpha="0.8">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/app_logo"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Verify your mobile number"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/heading_bg"
                android:textStyle="normal"
                style="@style/text_font"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rectangle_line"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:text="Country"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/normal_font_color"
                        style="@style/text_font"/>
                    <com.rilixtech.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        style="@style/text_font"
                        app:ccp_countryPreference="IN,GB,AU,CA,US,SG"
                        app:ccp_textColor="@color/normal_font_color"
                        app:ccp_textFont="thesansplain.ttf"
                        app:ccp_showFullName="true"
                        app:ccp_textSize="@dimen/_12sdp"
                        app:ccp_arrowSize="@dimen/_16sdp"
                        app:ccp_hidePhoneCode="true"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/solid_bg">

                    <TextView
                        android:id="@+id/code_txt"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="+91"
                        android:textSize="@dimen/_14sdp"
                        style="@style/text_font"

                        android:textColor="@color/normal_font_color"
                        android:gravity="center_vertical|center_horizontal"/>
                    <LinearLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/phone_no_edt"
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/phoneno"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:maxLength="12"
                        android:textColor="@color/heading_bg"
                        android:textColorHint="@color/hint_txt_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_14sdp"
                        android:imeOptions="actionDone"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:text="@string/verification_str"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Term and Condition Apply"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:textColor="@color/normal_font_color"
                android:textStyle="normal"
                style="@style/text_font"/>
            <Button
                android:id="@+id/mobile_verify_btn"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@color/heading_bg"
                android:text="@string/verify"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:imeOptions="actionDone"/>
        </LinearLayout>
    </LinearLayout>
</layout>