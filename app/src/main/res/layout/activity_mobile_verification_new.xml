<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context=".Activity.MobileVerificationActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_img"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_left_arrow2"
                    android:layout_gravity="left|center_vertical" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:alpha="0.8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/app_logo" />
            </LinearLayout>

            <TextView
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Verify your mobile number"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />
            <TextView
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/verification_str"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_12sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/rectangle_line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_font"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Country"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.bharatarmy.CountryCodePicker
                        android:id="@+id/ccp"
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="right"
                        app:ccp_arrowSize="@dimen/_16sdp"
                        app:ccp_countryPreference="IN,GB,AU,CA,US,SG"
                        app:ccp_hidePhoneCode="true"
                        app:ccp_showFullName="true"
                        app:ccp_textColor="@color/normal_font_color"
                        app:ccp_textFont="thesansplain.ttf"
                        app:ccp_textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/solid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/code_txt"
                        style="@style/text_font"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="+91"

                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/phone_no_edt"
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/phoneno"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:textColor="@color/heading_bg"
                        android:textColorHint="@color/hint_txt_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/_11sdp"
                android:gravity="center_vertical"
                android:text="Terms and Conditions"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:orientation="horizontal">

            <CheckBox
                android:id="@+id/terms_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/chk_indicator" />

            <TextView
                android:id="@+id/term_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/terms_txt"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/term_condition_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/terms_condition_txt"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/term2_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="of The Bharat Army"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_11sdp" />
            <!--</LinearLayout>-->
        </LinearLayout>

        <Button
            android:id="@+id/mobile_verify_btn"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@color/heading_bg"
            android:imeOptions="actionDone"
            android:text="@string/verify"
            android:textAllCaps="false"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
</LinearLayout></layout>