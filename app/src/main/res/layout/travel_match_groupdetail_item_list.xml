<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/match_detail_curveshape"
    android:elevation="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/main_groupLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/match_groupdetail_curveshape"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/match_main_imageshape"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.bharatarmy.RoundishImageView
                        android:id="@+id/main_match_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/australia_tour"
                        app:cornerRadius="@dimen/round_corner_radius"
                        app:roundedCorners="bottomLeft" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_line"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/packageprice_txt"
                            style="@style/title_text_font"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/match_detail_bluecurveshape"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="T20"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_7sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/packageplacename_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:text="Sat 03 Aug,10:30 AM(Local)"
                            android:textColor="@color/unselected_view"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="2"
                            android:text="India"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />


                        <com.bharatarmy.RoundishImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/in_flag"
                            app:cornerRadius="5dp"
                            app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="2"
                            android:text="vs"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                        <com.bharatarmy.RoundishImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wl"
                            app:cornerRadius="5dp"
                            app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Windies"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="3"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="Match 01 | Central Broward Regional Park Stadium Turf Ground, Lauderhill, Florida"
                            android:textColor="@color/unselected_view"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ticketClickLinear"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/gray_circlering"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ticketImage"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:src="@drawable/silver_tickets"
                            android:tint="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hospitalityClickLinear"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/gray_circlering"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/hospitalityImage"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:src="@drawable/hospitality"
                            android:tint="@color/gray"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/match_addRcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:background="@drawable/gradiant_line"
        android:visibility="visible" />
</LinearLayout>
