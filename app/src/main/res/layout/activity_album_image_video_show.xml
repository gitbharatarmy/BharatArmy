<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_dialog"
        android:orientation="vertical"
        tools:context=".Activity.AlbumImageVideoShowActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_detail_rcvList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:nestedScrollingEnabled="false" />

        <com.alexvasilkov.gestures.views.GestureImageView
            android:id="@+id/show_album_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:gest_doubleTapEnabled="true" />

        <VideoView
            android:id="@+id/play_albumvideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"></VideoView>

        <ImageView
            android:id="@+id/videoView_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/image_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_70sdp"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/back_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/reverse_dropshadow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</layout>