<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_dialog"
        android:orientation="vertical"
        tools:context=".Activity.AlbumImageVideoShowActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_detail_rcvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:nestedScrollingEnabled="false" />



        <LinearLayout
            android:id="@+id/back_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/reverse_dropshadow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</layout>