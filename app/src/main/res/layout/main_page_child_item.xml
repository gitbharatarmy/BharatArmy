<?xml version="1.0" encoding="utf-8"?>
<layout>
    <!--@dimen/_250sdp-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/container">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_5sdp"
            card_view:cardCornerRadius="10dp"
            android:elevation="3dp"
            card_view:cardMaxElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/item_heading_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Get ready for the twenty20 in 2020"
                android:textAllCaps="true"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_desc_txt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="As the Bharat Army partners with the ICC for the T20 Cricket World Cup in Australia!"
                android:textAllCaps="false"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/book_txt"
            style="@style/text_font"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bookbtn_shape"
            android:gravity="center_horizontal|center_vertical"
            android:text="Book Now"
            android:textAllCaps="true"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@id/container"
            android:layout_alignParentRight="true"
        android:layout_marginTop="-35dp"
            android:layout_marginRight="@dimen/_20sdp"
            />

    </RelativeLayout>

</layout>