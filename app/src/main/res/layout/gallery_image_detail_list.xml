<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image_detail_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/image_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/image_detailLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/image_full"
        android:layout_marginBottom="@dimen/_50sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:id="@+id/uploadimage_userNametxt"
            style="@style/text_font"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Developed"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_14sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_clock"
            android:tint="@color/splash_bg_color"
         android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/uploadimage_durationtxt" />
        <TextView
            android:id="@+id/uploadimage_durationtxt"
            style="@style/text_font"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="100d ago"
            android:textColor="@color/splash_bg_color"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:background="@color/colorGrey300"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"/>
    </LinearLayout>

</RelativeLayout>
</layout>

