        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bharatarmy.VideoModule.FullscreenVideoView
            android:id="@+id/fullscreenVideoView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true" />
        <!--<FrameLayout-->
            <!--android:id="@+id/video_play_layout"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="@dimen/_200sdp"-->
            <!--android:background="@color/transparent">-->
            <!--<com.universalvideoview.UniversalVideoView-->
                <!--android:id="@+id/videoView"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:layout_gravity="center"-->
                <!--app:uvv_autoRotation="true"-->
                <!--app:uvv_fitXY="false" />-->

            <!--<com.universalvideoview.UniversalMediaController-->
                <!--android:id="@+id/media_controller"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--app:uvv_scalable="true" />-->

        <!--</FrameLayout>-->
        <LinearLayout
            android:id="@+id/back_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/picturemode_linear"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/related_video_rcyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:shimmer_demo_angle="10"
            app:shimmer_demo_layout="@layout/related_video_dataholder_item"
            app:shimmer_demo_layout_manager_type="linear_horizontal"
            app:shimmer_demo_shimmer_color="#21ffffff" />

    </LinearLayout>


</LinearLayout>



