<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Activity.VideoDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <com.bharatarmy.VideoModule.FullscreenVideoView
            android:id="@+id/fullscreenVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/back_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/black" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/picturemode_linear"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_left_arrow2"
                android:tint="@color/black" />
        </LinearLayout>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/show_video_title_txt"
        style="@style/title_text_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="World Cup 2019: Bring o.."
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_22sdp" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/story_deatil_dataholder" />


    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/auhtor_story_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="900"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <com.like.LikeButton
                android:id="@+id/upr_story_like_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                app:circle_end_color="@color/heading_bg"
                app:circle_start_color="@color/heading_bg"
                app:dots_primary_color="@color/orange"
                app:dots_secondary_color="@color/orange"
                app:icon_size="22dp"
                app:like_drawable="@drawable/ic_thumb_up_blue_button"
                app:unlike_drawable="@drawable/ic_likes_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_font"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="1000"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share_arrow"
                android:tint="@color/heading_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upr_story_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_font"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="94"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_comment"
                android:tint="@color/heading_bg" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_font"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="500"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_eye"
                android:tint="@color/heading_bg" />
        </LinearLayout>
    </LinearLayout>
        <TextView
            style="@style/title_text_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Related Videos"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_16sdp" />

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/related_video_rcyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            app:shimmer_demo_angle="10"
            app:shimmer_demo_layout="@layout/related_video_dataholder_item"
            app:shimmer_demo_layout_manager_type="linear_horizontal"
            app:shimmer_demo_shimmer_color="#21ffffff" />

    </LinearLayout>
</ScrollView>

</LinearLayout>



