<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/match_detail_curveshape"
        android:elevation="5dp"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/template1"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_130sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tag_txt"
                    style="@style/title_text_font"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/tag_shape"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="T20"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/item_heading_txt"
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Get ready for the twenty20 in 2020"
                    android:textAllCaps="true"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:id="@+id/item_desc_txt"
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="As the Bharat Army partners with the ICC for the T20 Cricket World Cup in Australia!"
                    android:textAllCaps="false"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/template2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:visibility="visible">

            <com.bharatarmy.RoundishImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ajif"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:cornerRadius="20dp"
                app:roundedCorners="topRight|bottomLeft" />
        </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:id="@+id/book_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/bookbtn_shape"
            android:visibility="visible">


            <TextView
                android:id="@+id/book_txt"
                style="@style/text_font"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Book Now"
                android:textAllCaps="true"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </RelativeLayout>
</layout>