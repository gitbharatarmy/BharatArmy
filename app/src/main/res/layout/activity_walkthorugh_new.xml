<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.WalkthorughNewActivity">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/bg_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dropshadow"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile"
                android:tint="@color/splash_bg_color"
                android:layout_marginTop="@dimen/_140sdp"/>
            <TextView
                android:id="@+id/header_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="center_horizontal|top"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_20sdp"
                android:visibility="visible" />


            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/worm_dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                app:dotsColor="@color/splash_bg_color"
                android:layout_marginTop="@dimen/_90sdp"
                app:dotsCornerRadius="6dp"
                app:dotsSize="8dp"
                app:dotsSpacing="2dp"
                app:dotsStrokeColor="@color/splash_bg_color"
                app:dotsStrokeWidth="1dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_next"
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:gravity="center|bottom"
                android:paddingBottom="@dimen/_20sdp"
                android:text="@string/next"
                android:textColor="@color/splash_bg_color"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_skip"
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:gravity="center"
                android:text="@string/skip"
                android:textColor="@color/splash_bg_color"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
</layout>

