<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:flipTimer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/heading_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/back_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_left_arrow2"
                        android:layout_gravity="left|center_vertical"
                        android:tint="@color/splash_bg_color"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/toolbar_title_txt"
                    style="@style/title_text_font"
                    android:layout_width="0dp"
                    android:layout_weight="2.6"
                    android:layout_height="@dimen/_40sdp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Match 1"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_14sdp" />
                <ImageView
                    android:id="@+id/share_img"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_share"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/middle_layer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_below="@+id/toolbar"
                    android:background="@drawable/dropshadow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/header_banner" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/match_detail_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/match_day_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Sun, 16 Jun"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/match_time_txt"
                            style="@style/text_font"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="10:30 am(Local)"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/match_name_linear"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_below="@+id/match_detail_linear"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="0.6"
                            android:src="@drawable/nz_flag" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.8"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:ellipsize="end"
                                android:gravity="center_horizontal|top"
                                android:maxLines="2"
                                android:text="New Zealand vs Bangladesh"
                                android:textColor="@color/splash_bg_color"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/text_font"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_horizontal|top"
                                android:text="match start in....."
                                android:textColor="@color/splash_bg_color"
                                android:textSize="@dimen/_11sdp"

                                android:textStyle="bold"
                                android:id="@+id/match_txt"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight=".6"
                            android:src="@drawable/bangladesh_flag" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/match_count_down_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_name_linear"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.bharatarmy.CountDownClockTravel
                            android:id="@+id/timerProgramCountdown"
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            flipTimer:almostFinishedCallbackTimeInSeconds="5"
                            flipTimer:animationDuration="850"
                            flipTimer:countdownTickInterval="1000"
                            flipTimer:digitBottomDrawable="@drawable/travel_background_bottom"
                            flipTimer:digitDividerColor="@color/heading_bg"
                            flipTimer:digitPadding="2dp"
                            flipTimer:digitTextColor="@color/splash_bg_color"
                            flipTimer:digitTextSize="24sp"
                            flipTimer:digitTopDrawable="@drawable/travel_background_bottom"
                            flipTimer:digitWidth="28dp"
                            flipTimer:halfDigitHeight="23dp"
                            flipTimer:resetSymbol="8"
                            flipTimer:splitterPadding="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/third_location_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_count_down_linear"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/travel_location_img"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center_vertical|right"
                            android:src="@drawable/ic_location"
                            android:tint="@color/splash_bg_color" />

                        <TextView
                            android:id="@+id/match_address_txt"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|left"
                            android:text="Old Trafford,Manchester"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="visible">
                    <TextView
                        android:id="@+id/ticket_header_txt"
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/ticket_header"
                        android:textAllCaps="true"
                        android:textColor="@color/heading_bg"
                        android:textSize="@dimen/_13sdp" />

                    <include layout="@layout/star_line_view" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ticket_detail_rcvList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/hospitality_header_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="@string/hospitality_header"
                            android:textAllCaps="true"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                        <include layout="@layout/star_line_view" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hospitality_detail_rcvList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/transfer_header_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="@string/transfer_header"
                            android:textAllCaps="true"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                        <include layout="@layout/star_line_view" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/transfer_detail_rcvList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</layout>