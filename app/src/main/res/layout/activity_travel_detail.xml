    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:flipTimer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/heading_bg"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Title.Collapse" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/middle_layer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/dropshadow"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/header_banner"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/match_detail_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/match_day_txt"
                    style="@style/text_font"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Sun, 16 Jun"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/match_time_txt"
                    style="@style/text_font"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="10:30 am(Local)"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/match_name_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/match_detail_linear"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.4"
                    android:src="@drawable/in_flag" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|top"
                        android:singleLine="true"
                        android:text="India vs Pakistan"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|top"
                        android:text="match start in....."
                        android:textColor="@color/skip_color"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight=".4"
                    android:src="@drawable/pk_flag" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/match_count_down_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@+id/match_name_linear"
                android:orientation="vertical">

                <com.bharatarmy.CountDownClockTravel
                    android:id="@+id/timerProgramCountdown"
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    flipTimer:almostFinishedCallbackTimeInSeconds="5"
                    flipTimer:animationDuration="850"
                    flipTimer:countdownTickInterval="1000"
                    flipTimer:digitBottomDrawable="@drawable/background_bottom"
                    flipTimer:digitDividerColor="@color/heading_bg"
                    flipTimer:digitPadding="2dp"
                    flipTimer:digitTextColor="@color/splash_bg_color"
                    flipTimer:digitTextSize="24sp"
                    flipTimer:digitTopDrawable="@drawable/background_top"
                    flipTimer:digitWidth="28dp"
                    flipTimer:halfDigitHeight="23dp"
                    flipTimer:resetSymbol="8"
                    flipTimer:splitterPadding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/match_count_down_linear"
                android:id="@+id/third_location_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/travel_location_img"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_location"
                    android:tint="@color/splash_bg_color" />

                <TextView
                    android:id="@+id/match_address_txt"
                    style="@style/text_font"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:text="Old Trafford,Manchester"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_11sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Tickets"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ticket_detail_rcvList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible" />

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Hospitality"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hospitality_detail_rcvList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible" />

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Transfer"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/transfer_detail_rcvList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible" />
            </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</layout>