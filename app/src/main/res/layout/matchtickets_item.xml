<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ticketLinear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/travel_match_child_curveshape"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.bharatarmy.TravelDesignModule.RoundishImageView
            app:cornerRadius="@dimen/round_corner_radius"
            app:roundedCorners="bottomLeft"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/australia_tour" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="premium (bowler's arm - covered)"
                    android:textAllCaps="true"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxLines="2"
                    android:text="$265.00"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    style="@style/title_text_font"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="right|center_vertical"
                    android:text="per pax"
                    android:textAllCaps="true"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_5sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ticketscart_addimage"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:src="@drawable/ic_blank_check" />

                <LinearLayout
                    android:id="@+id/addtoticketscart1Linear"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:background="@drawable/match_cartshape"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/cart"
                        android:tint="@color/splash_bg_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/removetoticketscart1Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/cart_removeshape"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/title_text_font"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Remove"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>