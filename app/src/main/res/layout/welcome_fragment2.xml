<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:background="@null">

    <FrameLayout
        android:id="@id/images"
        android:layout_width="@dimen/welcome_images_size"
        android:layout_height="@dimen/welcome_images_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_images_margin_top"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/a014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/image2_c_01"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/a015"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="25dp"
            android:scaleType="centerInside"
            android:tint="@color/heading_bg"
            android:src="@drawable/bharatkesath"/>
        <ImageView
            android:id="@+id/a003"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/image2_b_01"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left|bottom"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/a004"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="64dp"
            android:layout_marginRight="64dp"
            android:scaleType="centerInside"
            android:src="@drawable/image2_b_02"
            android:layout_gravity="right|top"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/a005"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="114dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/image2_b_03"
            android:layout_gravity="right|bottom"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/a006"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/image2_b_04"
            android:layout_gravity="left|top"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@id/heading"
        android:text="@string/welcome_head_text_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/_44sdp"
        android:maxLines="2"
        android:textAppearance="@style/WelcomeHeadingAppearance"
        android:gravity="center"
        style="@style/title_text_font"/>

    <TextView
        android:id="@id/content"
        android:text="@string/welcome_content_text_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/heading"
        android:layout_marginTop="8dp"
        android:minHeight="@dimen/welcome_content_min_height"
        android:maxLines="3"
        android:textAppearance="@style/WelcomeContentAppearance"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        style="@style/text_font"/>
    <!--</RelativeLayout>-->
</RelativeLayout>