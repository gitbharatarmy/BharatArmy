<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/assign_listlinear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/selected_chk"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:button="@drawable/round_checkbox_indicator" />

            <ImageView
                android:id="@+id/selected_option_img"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/selected_chk"
                android:src="@drawable/ic_private_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_39sdp"
                android:layout_toRightOf="@+id/selected_option_img"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_7sdp">


                <TextView
                    android:id="@+id/privacy_option_txt"
                    style="@style/title_text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="@string/photo_public_option_Imageheader_txt"
                    android:textColor="@color/heading_bg"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/privacy_sub_txt"
                    style="@style/text_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_public_option_Imagesub_txt"
                    android:textColor="@color/normal_font_color"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray" />
    </LinearLayout>
</layout>