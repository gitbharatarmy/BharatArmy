<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:visibility="visible">
        <!--ReletiveLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ajif" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/banner_img"
                    android:layout_alignTop="@+id/banner_img"
                    android:layout_alignRight="@+id/banner_img"
                    android:layout_alignBottom="@+id/banner_img"
                    android:layout_margin="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/header_img"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:paddingLeft="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:src="@drawable/app_logo" />
                    <TextView
                        android:id="@+id/header_txt"
                        style="@style/text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="top"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:text="@string/next"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </LinearLayout>
            </RelativeLayout>

