<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash_bg_color"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hotel_tea_time_img"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:src="@drawable/australia_tour"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_2sdp">

                <LinearLayout
                    android:id="@+id/lable_linear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/linear1_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/linear"
                        android:gravity="center_vertical|center"
                        android:padding="@dimen/_5sdp"
                        android:text="ODI"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/linear2_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/linear"
                        android:gravity="center_vertical|center"
                        android:padding="@dimen/_5sdp"
                        android:text="T20"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/linear3_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/linear"
                        android:gravity="center_vertical|center"
                        android:padding="@dimen/_5sdp"
                        android:text="IPL"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/hotel_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    style="@style/title_text_font"
                    android:textColor="@color/heading_bg"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:text="Australia Tour of India"/>
                <TextView
                    android:id="@+id/place_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    style="@style/text_font"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:textColor="@color/normal_font_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:text="Mens"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/date_img"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:src="@drawable/ic_calendar"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/date_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Feb 2019 - Mar 2019"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_2sdp"
                        android:textColor="@color/NotActive_dot_color"
                        style="@style/text_font"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>