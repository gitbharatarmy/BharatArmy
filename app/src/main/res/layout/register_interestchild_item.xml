<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/match_deatil_orange_curveshape"
    android:elevation="3dp"
    app:cardMaxElevation="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/match_detail_curveshape"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/main_groupLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/match_main_imageshape"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.bharatarmy.RoundishImageView
                        android:id="@+id/main_match_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/australia_tour"
                        app:cornerRadius="@dimen/round_corner_radius"
                        app:roundedCorners="bottomLeft" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_line"
                    android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tournamenttype_txt"
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/tag_shape"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="T20"
                            android:textColor="@color/splash_bg_color"
                            android:textSize="@dimen/_7sdp"
                            android:textStyle="bold"
                            android:paddingLeft="@dimen/_7sdp"
                            android:paddingRight="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"/>

                        <TextView
                            android:id="@+id/tournamenttime_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:text="Sat 03 Aug,10:30 AM(Local)"
                            android:textColor="@color/unselected_view"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fromCountry_txt"
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="2"
                            android:text="India"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />


                        <com.bharatarmy.RoundishImageView
                            android:id="@+id/fromCountry_img"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/flag_india"
                            app:cornerRadius="5dp"
                            app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

                        <TextView
                            style="@style/title_text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="2"
                            android:text="v"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                        <com.bharatarmy.RoundishImageView
                            android:id="@+id/toCountry_img"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wl"
                            app:cornerRadius="5dp"
                            app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

                        <TextView
                            android:id="@+id/toCountry_txt"
                            style="@style/title_text_font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Windies"
                            android:textColor="@color/heading_bg"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matchno_stadiumname_txt"
                            style="@style/text_font"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="3"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="Match 01 | Central Broward Regional Park Stadium Turf Ground, Lauderhill, Florida"
                            android:textColor="@color/unselected_view"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.1">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/selected_chk"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:button="@drawable/registerinterest_round_checkbox_indicator"/>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_gradiant_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_15sdp"

        android:background="@drawable/gradiant_line"
        android:visibility="visible" />
</LinearLayout>
</layout>