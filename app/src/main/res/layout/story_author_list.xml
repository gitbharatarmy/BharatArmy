<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_210sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/splash_bg_color"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ajif" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/banner_img"
                    android:layout_alignTop="@+id/banner_img"
                    android:layout_alignRight="@+id/banner_img"
                    android:layout_alignBottom="@+id/banner_img"
                    android:layout_margin="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/header_img"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:paddingLeft="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:src="@drawable/app_logo"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/header_txt"
                        style="@style/text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:text="@string/next"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/type_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/app_logo"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_11sdp"
                    style="@style/title_text_font"
                    android:textColor="@color/sign_up"/>
            </LinearLayout>

            <TextView
                android:id="@+id/army_story_header_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                style="@style/title_text_font"
                android:textColor="@color/heading_bg"
                android:paddingRight="@dimen/_5sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/bharat_army_story"
                />
            <!-- style="@style/text_font"-->
            <TextView
                android:id="@+id/army_story_sub_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/bharat_army_story"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_10sdp"
                style="@style/text_font"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/date_img"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:src="@drawable/ic_calendar"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/NotActive_dot_color"
                    style="@style/text_font"
                    android:textSize="@dimen/_9sdp"/>
                <ImageView
                    android:id="@+id/views_img"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:src="@drawable/ic_eye"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/views_txt"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/NotActive_dot_color"
                    style="@style/text_font"
                    android:textSize="@dimen/_9sdp"/>
                <ImageView
                    android:id="@+id/follows_img"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/password"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/follows_txt"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/gray"
                    style="@style/text_font"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>