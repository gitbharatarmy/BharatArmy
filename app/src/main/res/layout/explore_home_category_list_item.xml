<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/expolre_Category_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:elevation="3dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/expolre_Category_linear"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_82sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/explore_category_img"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_wine"
                android:adjustViewBounds="true"
                android:tint="@color/splash_bg_color"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/explore_category_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/explore_category_img"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/splash_bg_color"
                android:text="BA Poll"
                android:textSize="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/explore_categorycount_txt"
                style="@style/text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/explore_category_txt"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_minus3sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:textColor="@color/splash_bg_color"
                android:text="BA Poll"
                android:textSize="@dimen/_8sdp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>