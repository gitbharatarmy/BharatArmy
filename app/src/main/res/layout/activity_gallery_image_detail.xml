<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.GalleryImageDetailActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/heading_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/toolbar_title_txt"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                style="@style/title_text_font"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_15sdp"
                android:text="Title "
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/share_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_share"
                android:visibility="visible"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_detail_rcvList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_alignLeft="@+id/banner_img"
                android:layout_alignTop="@+id/banner_img"
                android:layout_alignRight="@+id/banner_img"
                android:layout_alignBottom="@+id/banner_img"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_230sdp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/prev_img"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_20sdp"
                    android:drawableLeft="@drawable/ic_back"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/next_img"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="right"
                   android:drawableRight="@drawable/ic_next" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</layout>