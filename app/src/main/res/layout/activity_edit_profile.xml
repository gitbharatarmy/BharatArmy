<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EditProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/heading_bg"
        app:titleTextAppearance="@style/ToolbarTitle"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/back_img"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_4sdp">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_left_arrow2"
                    android:layout_gravity="left|center_vertical"
                    android:tint="@color/splash_bg_color"/>
            </LinearLayout>
            <TextView
                android:id="@+id/toolbar_title_txt"
                style="@style/title_text_font"
                android:layout_width="0dp"
                android:layout_weight="2.6"
                android:layout_height="@dimen/_40sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/heading"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_14sdp" />
            <LinearLayout
                android:id="@+id/share_linear"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/share_img"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_share"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"/>

                <TextView
                    style="@style/text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="edit"
                    android:textColor="@color/splash_bg_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/top_gradiant_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/bg_gradiant_line" />
    <ScrollView
        android:id="@+id/edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@id/top_gradiant_view"
        tools:context=".Activity.EditProfileActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:background="@drawable/profile"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_116sdp"
            android:layout_height="@dimen/_116sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_22sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/proflie" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/first_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title_text_font"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_13sdp"
            android:text="@string/firstname"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingBottom="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">


        <EditText
            android:id="@+id/user_fname_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/firstname"
            android:maxLines="1"
            android:inputType="textCapSentences|textCapWords"
            android:maxLength="50"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"/>
    </LinearLayout>

        <TextView
            android:id="@+id/last_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title_text_font"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_13sdp"
            android:text="@string/lastname"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_line"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp">


            <EditText
                android:id="@+id/user_lname_edt"
                style="@style/text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:hint="@string/lastname"
                android:maxLines="1"
                android:inputType="textCapSentences|textCapWords"
                android:maxLength="50"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/heading_bg"
                android:textColorHint="@color/hint_txt_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_12sdp"
                android:imeOptions="actionNext"/>
        </LinearLayout>
    <TextView
        android:id="@+id/gender_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/gender"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />


        <RadioGroup
            android:id="@+id/gender_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_15sdp">


            <RadioButton
                android:id="@+id/male_rb"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/male"
                style="@style/text_font"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/heading_bg"
               android:button="@drawable/radio_indicator"/>

            <RadioButton
                android:id="@+id/female_rb"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/female"
                style="@style/text_font"
                android:textColor="@color/heading_bg"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:button="@drawable/radio_indicator"/>
        </RadioGroup>

    <TextView
        android:id="@+id/email_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/email"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/email_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/not_edit_value_bg"
            android:hint="@string/email"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:maxLength="150"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:clickable="false"
            android:focusable="false"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <TextView
        android:id="@+id/phone_number_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/phoneno"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <com.bharatarmy.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            style="@style/text_font"
            app:ccp_enableHint="false"
            app:ccp_countryPreference="IN,GB,AU,CA,US,SG"
            app:ccp_textColor="@color/normal_font_color"
            app:ccp_textFont="thesansplain.ttf"/>
        <EditText
            android:id="@+id/phone_no_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/phoneno"
            android:maxLines="1"
            android:inputType="phone"
            android:maxLength="12"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/address_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/address"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/address1_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/address_line1"
            android:maxLines="1"
            android:maxLength="500"
            android:inputType="text"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/address2_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/address_line2"
            android:maxLines="1"
            android:maxLength="500"
            android:inputType="text"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <TextView
        android:id="@+id/country_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/area"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/area_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/area"
            android:maxLines="1"
            android:maxLength="250"
            android:inputType="text"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNext"/>

    </LinearLayout>

    <TextView
        android:id="@+id/state_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/state"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />
    <RelativeLayout
        android:id="@+id/states_relv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/states_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/select"
            android:maxLines="1"
            android:maxLength="45"
            android:inputType="text"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:clickable="true"
            android:focusable="false"
            android:imeOptions="actionNext"/>

        <ImageView
            android:id="@+id/states_selection_img"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/gray"
            android:src="@drawable/ic_more"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/city_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/city"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />
    <RelativeLayout
        android:id="@+id/city_relv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

     <EditText
         android:id="@+id/city_edt"
         style="@style/text_font"
         android:layout_width="match_parent"
         android:layout_height="@dimen/_30sdp"
         android:background="@android:color/transparent"
         android:layout_toLeftOf="@+id/city_selection_img"
         android:hint="@string/select"
         android:maxLines="1"
         android:maxLength="45"
         android:inputType="text"
         android:paddingLeft="@dimen/_5sdp"
         android:paddingRight="@dimen/_5sdp"
         android:textColor="@color/heading_bg"
         android:textColorHint="@color/hint_txt_color"
         android:textCursorDrawable="@drawable/color_cursor"
         android:textSize="@dimen/_12sdp"
         android:clickable="true"
         android:focusable="false"
         android:imeOptions="actionNext"/>

        <ImageView
            android:id="@+id/city_selection_img"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/gray"
            android:src="@drawable/ic_more"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/pincode_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_text_font"
        android:textColor="@color/heading_bg"
        android:textSize="@dimen/_13sdp"
        android:text="@string/pincode"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_5sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <EditText
            android:id="@+id/pincode_edt"
            style="@style/text_font"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:hint="@string/pincode"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/heading_bg"
            android:textColorHint="@color/hint_txt_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp"
            android:imeOptions="actionNone" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/vertical_line"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/social_handle_txt"
                        style="@style/title_text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center_vertical|left"
                        android:text="Social Media Handle"
                        android:textAllCaps="true"
                        android:textColor="@color/heading_bg"
                        android:textSize="@dimen/_17sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/army_story_desc_txt"
                    style="@style/title_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical|left"
                    android:text="Social Profile Information"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/facebook_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title_text_font"
            android:textColor="@color/heading_bg"
            android:textSize="@dimen/_13sdp"
            android:text="@string/facebook_txt"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:paddingBottom="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/social_handle_rectangle_shape"
