<?xml version="1.0" encoding="utf-8"?>
<com.bharatarmy.CartDetailViewOneAnimation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/ticket_hospitality_all_corner_shape"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35">

                            <com.bharatarmy.RoundishImageView
                                android:id="@+id/match_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/t20defaultimage"
                                app:cornerRadius="@dimen/_10sdp"
                                app:roundedCorners="all"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ticket_detail_linear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/match_type_tag_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="27dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/square_tag_shape"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="T20"
                                    android:textColor="@color/splash_bg_color"
                                    android:textSize="@dimen/_8sdp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_clock"
                                    android:tint="@color/unselected_view"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/match_date_time_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:text="Sat 03 Aug,10:30 AM (Local)"
                                    android:textColor="@color/unselected_view"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/first_country_Name_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:gravity="top|left"
                                    android:maxLines="2"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:text="India"
                                    android:textColor="@color/heading_bg"
                                    android:textSize="@dimen/_11sdp" />

                                <RelativeLayout
                                    android:id="@+id/flag_boder_linear"
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_21sdp"
                                    android:background="@drawable/curve_flag_boader_shape">

                                    <com.bharatarmy.RoundishImageView
                                        android:id="@+id/first_countryflag_image"
                                        android:layout_width="@dimen/_32sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/flag_india"
                                        app:cornerRadius="3dp"
                                        app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

                                </RelativeLayout>

                                <TextView
                                    style="@style/title_text_font"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="v"
                                    android:textColor="@color/heading_bg"
                                    android:textSize="@dimen/_11sdp" />

                                <RelativeLayout
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_21sdp"
                                    android:background="@drawable/curve_flag_boader_shape">

                                    <com.bharatarmy.RoundishImageView
                                        android:id="@+id/second_countryflag_image"
                                        android:layout_width="@dimen/_32sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/south_flag"
                                        app:cornerRadius="3dp"
                                        app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/second_country_Name_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:gravity="top"
                                    android:maxLines="2"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="South Africa"
                                    android:textColor="@color/heading_bg"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:orientation="horizontal"
                                android:visibility="visible">
                                <ImageView
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    android:src="@drawable/ic_travel_page_tickets"
                                    android:tint="@color/heading_bg"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/match_ticket_category_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_1sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="Category A "
                                    android:textColor="@color/heading_bg"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp">


                                <TextView
                                    android:id="@+id/match_ticket_addedcart_tag_txt"
                                    style="@style/title_text_font"
                                    android:layout_width="@dimen/_95sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/travel_added_cart_ticket_shape"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_7sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:text="Added Cart"
                                    android:textAllCaps="true"
                                    android:textColor="@color/splash_bg_color"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/close_dialog_linear"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/blue_circle">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_error"
                    android:tint="@color/splash_bg_color" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</com.bharatarmy.CartDetailViewOneAnimation>