<?xml version="1.0" encoding="utf-8"?>
<layout >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/match_detail_curveshape"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardMaxElevation="6dp">


            <RelativeLayout
                android:id="@+id/header_banner_rcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.bharatarmy.RoundishImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/australia_tour"
                    app:cornerRadius="@dimen/round_corner_radius"
                    app:roundedCorners="topRight" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/banner_img"
                    android:layout_alignTop="@+id/banner_img"
                    android:layout_alignRight="@+id/banner_img"
                    android:layout_alignBottom="@+id/banner_img"
                    android:layout_margin="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/header_img"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:paddingLeft="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:src="@drawable/app_logo_new"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/header_txt"
                        style="@style/text_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:alpha=".8"
                        android:background="@color/heading_bg"
                        android:text="@string/next"
                        android:textColor="@color/splash_bg_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/army_story_header_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                style="@style/title_text_font"
                android:textColor="@color/heading_bg"
                android:paddingRight="@dimen/_5sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/bharat_army_story"
                />
            <!-- style="@style/text_font"-->
            <TextView
                android:id="@+id/army_story_sub_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/bharat_army_story"
                android:textColor="@color/normal_font_color"
                android:textSize="@dimen/_10sdp"
                style="@style/text_font"/>

            <LinearLayout
                android:id="@+id/bottom_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/date_img"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:src="@drawable/calendar"
                    android:tint="@color/skip_color"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/skip_color"
                    style="@style/text_font"
                    android:textSize="@dimen/_9sdp"/>
                <ImageView
                    android:id="@+id/views_img"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:src="@drawable/ic_eye"
                    android:tint="@color/skip_color"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/views_txt"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/skip_color"
                    style="@style/text_font"
                    android:textSize="@dimen/_9sdp"/>
                <ImageView
                    android:id="@+id/follows_img"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_password"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/follows_txt"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="06 Feb 19"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/gray"
                    style="@style/text_font"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/author_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/proflie"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center_vertical"
                    app:civ_border_color="#2a3550"/>

                <TextView
                    android:id="@+id/username_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="06 Feb 19"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/heading_bg"
                    style="@style/text_font"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

</LinearLayout>
</layout>