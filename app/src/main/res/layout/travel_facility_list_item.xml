<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--        android:layout_marginLeft="@dimen/_1sdp"-->
        <!--        android:layout_marginTop="@dimen/_1sdp"-->
        <!--        android:layout_marginRight="@dimen/_1sdp"-->
        <!--        android:layout_marginBottom="@dimen/_1sdp"-->
        <!--        android:padding=".5dp"-->
        <!--        android:background="@color/colorGrey50"-->
        <RelativeLayout
            android:id="@+id/facility_rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_74sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <TextView
                android:id="@+id/offers_txt"
                style="@style/title_text_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-3dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/facility_img"
                android:background="@drawable/offers_tag_shape"
                android:gravity="center"
                android:paddingTop="@dimen/_1sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="offers"
                android:textColor="@color/splash_bg_color"
                android:textSize="@dimen/_7sdp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/facility_img"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_travel_page_sightseeing"
                android:tint="@color/heading_bg" />

            <TextView
                android:id="@+id/facility_txt"
                style="@style/title_text_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_below="@+id/facility_img"
                android:layout_marginBottom="@dimen/_1sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Hospitality"
                android:textColor="@color/heading_bg"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

    </LinearLayout>
</layout>